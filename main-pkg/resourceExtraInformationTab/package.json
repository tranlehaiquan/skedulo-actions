{
  "name": "minimal-react-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Skedulo",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/classnames": "^2.2.10",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^9.0.0",
    "@types/node": "^13.9.3",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "3",
    "@typescript-eslint/parser": "^3.5.0",
    "autoprefixer": "^9.6.1",
    "css-loader": "^3.2.0",
    "eslint": "7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "4",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^27.2.0",
    "msw": "^0.35.0",
    "node-sass": "^4.14.x",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^4.1.0",
    "postcss-loader": "^2.1.5",
    "prettier": "^2.3.2",
    "raw-loader": "^4.0.1",
    "sass-loader": "^8.0.0",
    "shared": "link:../shared",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "tailwindcss": "^1.2.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^4.3.0",
    "typescript": "3.9.x",
    "url-loader": "^1.0.1",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "@skedulo/sked-ui": "^19.8.2",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "date-fns": "^2.23.0",
    "date-fns-tz": "^1.0.10",
    "lodash": "^4.17.15",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-toastify": "^7.0.4"
  },
  "scripts": {
    "bootstrap": "yarn install --pure-lockfile",
    "dev": "node -v && webpack-dev-server --config ./config/webpack.config.js",
    "test": "node scripts/test.js --env=jsdom",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "compile": "webpack --config ./config/webpack.config.js --env.production"
  },
  "jest": {
    "coverageReporters": [
      "text-summary",
      "json-summary"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/test-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  }
}
