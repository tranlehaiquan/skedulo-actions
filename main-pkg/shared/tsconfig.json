{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es6",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
